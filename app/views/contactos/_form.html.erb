<%= simple_form_for(@contacto, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
<div class="modal-body">
    <div class="control-group span6">
    	<div class="row">
            <div class="span6">
				<%= f.input :nombre %>
				<%= f.input :apellido %>
				<%= f.input :telefono %>
				<%= f.input :celular %>
				<%= f.input :email %>
	          
				<div class="span7">
			        <div class="row span7">
						<p>Para mayor informacion  contactenos en:
						Correo: oficinatecnica@misena.edu.co
						Telefono: 5149290 Opción 1 Ext 43115
						Horario de atención: lunes a viernes de 8:00 AM -4:00 PM</p>
					</div> 
				</div>
			</div>	
	    </div>			
	</div>
	<div class="span6">
		<div class="form-actions">
			<%= f.submit 'Enviar', :class => 'btn-primary btn-small'%>
			<%= link_to "Cerrar", root_path, :class => 'btn btn-small' %>
		</div>	
	</div>
</div>	
 
<% end %>
