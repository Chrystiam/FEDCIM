<%- model_class = Cotizacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:escalado_talla_id) %>:</strong></dt>
  <dd><%= @cotizacion.escalado_talla_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_escala) %>:</strong></dt>
  <dd><%= @cotizacion.precio_escala %></dd>
  <dt><strong><%= model_class.human_attribute_name(:patronaje_basico_id) %>:</strong></dt>
  <dd><%= @cotizacion.patronaje_basico_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_patro) %>:</strong></dt>
  <dd><%= @cotizacion.precio_patro %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @cotizacion.total %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cotizaciones_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cotizacion_path(@cotizacion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cotizacion_path(@cotizacion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
