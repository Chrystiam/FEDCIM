<%- model_class = EscaladoTalla -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pieza) %>:</strong></dt>
  <dd><%= @escalado_talla.pieza %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio) %>:</strong></dt>
  <dd><%= @escalado_talla.precio %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              escalados_tallas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_escalado_talla_path(@escalado_talla), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              escalado_talla_path(@escalado_talla),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
