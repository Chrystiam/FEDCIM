<%= simple_form_for @escalado_talla, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :pieza %>
  <%= f.input :precio %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                escalados_tallas_path, :class => 'btn' %>
  </div>
<% end %>
