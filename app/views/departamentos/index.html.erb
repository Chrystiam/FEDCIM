<%- model_class = Departamento -%>

<div class="page-header">
  <div class="page-header">
    <h1>Departamentos</h1>
  </div>

  <table class="table table-hover">

    <thead>
      <tr>
        <th>id</th>
        <th>Nombre</th>
        <th>Sigla</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <%= render @departamentos %>
    </tbody>
    
  </table>

  <tfoot>
    <%= link_to "Nuevo Departamento", new_departamento_path, :remote => true, :class => 'btn btn-primary' %>
  </tfoot>

</div>  
