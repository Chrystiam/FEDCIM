<%= simple_form_for(@departamento, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.error_notification %>
  	
  <%= f.input :nombre, :label => "Nombre", :require => true %>
  <%= f.input :sigla, :label => "Sigla", :requre => true %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to "Atras",departamentos_path, :class => 'btn btn-small btn-info' %>
  </div>
<% end %>
