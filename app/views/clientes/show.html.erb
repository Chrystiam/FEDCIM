<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre_empresa) %>:</strong></dt>
  <dd><%= @cliente.nombre_empresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre_solicita_servicio) %>:</strong></dt>
  <dd><%= @cliente.nombre_solicita_servicio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono_empresa) %>:</strong></dt>
  <dd><%= @cliente.telefono_empresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono_contacto) %>:</strong></dt>
  <dd><%= @cliente.telefono_contacto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:correo_empresa) %>:</strong></dt>
  <dd><%= @cliente.correo_empresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:correo_contacto) %>:</strong></dt>
  <dd><%= @cliente.correo_contacto %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clientes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
